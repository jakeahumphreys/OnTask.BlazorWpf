@using MudBlazor
@page "/"

<PageTitle>Index</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudButton @onclick="OpenDialog" Variant="Variant.Filled" Color="Color.Primary">
        Create Collection
    </MudButton>
    <MudStack Class="flex-auto">
        @foreach (var collection in Collections)
        {
            <MudCard Class="@(collection.IsFocused ? "border-solid border-2 mud-border-info mud-elevation-24" : "")">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@collection.Name</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        @if (collection.IsFocused)
                        {
                            <MudChip Color="Color.Info">Focused</MudChip>
                        }
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.caption">@collection.Id</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.OpenInNew" Color="Color.Primary" Size="Size.Small" @onclick="@(() => OpenCollection(collection.Id))">Open</MudButton>
                </MudCardActions>
            </MudCard>
        }
    </MudStack>
</MudContainer>