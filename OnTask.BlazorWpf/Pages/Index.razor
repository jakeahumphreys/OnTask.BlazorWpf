@using MudBlazor
@page "/"

<PageTitle>Index</PageTitle>

<MudContainer>
    <MudStack>
        @foreach (var collection in Collections)
        {
            <MudCard Class="@(collection.IsFocused ? "border-solid border-2 mud-border-info mud-elevation-24" : "")">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@collection.Name</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        @if (collection.IsFocused)
                        {
                            <MudChip Color="Color.Info">Focused</MudChip>
                        }
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.caption">@collection.Id</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Open</MudButton>
                </MudCardActions>
            </MudCard>
        }
    </MudStack>
</MudContainer>